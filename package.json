{
  "name": "store-manager",
  "version": "1.0.0",
  "description": "bootcamp project",
  "main": "./server/index.js",
  "scripts": {
    "postinstall": "npm run clean && npm run build",
    "prestart": "babel-node store_manager --exit",
    "start": "node ./build/index.js",
    "dev": "nodemon ./server/index.js --exec babel-node",
    "pretest": "cross-env NODE_ENV=test babel-node store_manager --exit",
    "test": "cross-env NODE_ENV=test nyc mocha --require babel-register  --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "babel -d ./build ./server",
    "clean": "rm -rf build && mkdir build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OreoluwaHelen/store-manager.git"
  },
  "keywords": [
    "store",
    "manager"
  ],
  "author": "oreoluwa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OreoluwaHelen/store-manager/issues"
  },
  "homepage": "https://github.com/OreoluwaHelen/store-manager#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "dotenv": "^6.1.0",
    "eslint-plugin-import": "^2.14.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "make-runnable": "^1.3.6",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "pg": "^7.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai-http": "^4.2.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "nodemon": "^1.18.4",
    "supertest": "^3.3.0"
  }
}
